<?xml version="1.0" ?>
<list xmlns="http://schemas.sulu.io/list-builder/list">
    <key>itsm_incidents</key>

    <joins name="realm">
        <join>
            <entity-name>App\IstmSor\Entity\IstmRealm</entity-name>
            <field-name>App\IstmSor\Entity\IstmIncident.realm</field-name>
        </join>
    </joins>

    <properties>
        <property
            name="id"
            visibility="no"
            searchability="yes"
            translation="sulu_admin.id"
        >
            <field-name>id</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
        </property>

        <property
            name="number"
            visibility="always"
            sortable="true"
            searchability="yes"
            translation="app.itsm.incidents.table.number"
        >
            <field-name>number</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <filter type="text" />
        </property>

        <property
            name="title"
            visibility="always"
            sortable="true"
            searchability="yes"
            translation="sulu_admin.title"
        >
            <field-name>title</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <filter type="text" />
        </property>

        <property
            name="status"
            visibility="yes"
            sortable="true"
            searchability="yes"
            translation="app.itsm.incidents.table.status"
        >
            <field-name>status</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <filter type="text" />
        </property>

        <property
            name="priority"
            visibility="yes"
            sortable="true"
            searchability="yes"
            translation="app.itsm.incidents.table.priority"
        >
            <field-name>priority</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <filter type="text" />
        </property>

        <property
            name="requesterPrincipalId"
            visibility="no"
            sortable="true"
            searchability="yes"
            translation="app.itsm.incidents.table.requester"
        >
            <field-name>requesterPrincipalId</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <filter type="text" />
        </property>

        <property
            name="assigneePrincipalId"
            visibility="no"
            sortable="true"
            searchability="yes"
            translation="app.itsm.incidents.table.assignee"
        >
            <field-name>assigneePrincipalId</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <filter type="text" />
        </property>

        <property
            name="openedAt"
            visibility="yes"
            sortable="true"
            searchability="never"
            translation="app.itsm.incidents.table.opened_at"
        >
            <field-name>openedAt</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <transformer type="datetime"/>
            <filter type="datetime" />
        </property>

        <property
            name="updatedAt"
            visibility="yes"
            sortable="true"
            searchability="never"
            translation="sulu_admin.changed"
        >
            <field-name>updatedAt</field-name>
            <entity-name>App\IstmSor\Entity\IstmIncident</entity-name>
            <transformer type="datetime"/>
            <filter type="datetime" />
        </property>

        <property
            name="realmKey"
            visibility="no"
            sortable="true"
            searchability="yes"
            translation="app.itsm.field.realm"
        >
            <field-name>realmKey</field-name>
            <entity-name>App\IstmSor\Entity\IstmRealm</entity-name>
            <joins ref="realm"/>
            <filter type="text" />
        </property>
    </properties>
</list>
