<?xml version="1.0" ?>
<list xmlns="http://schemas.sulu.io/list-builder/list">
    <key>itsm_change_requests</key>

    <joins name="realm">
        <join>
            <entity-name>App\IstmSor\Entity\IstmRealm</entity-name>
            <field-name>App\IstmSor\Entity\IstmChangeRequest.realm</field-name>
        </join>
    </joins>

    <properties>
        <property
            name="id"
            visibility="no"
            searchability="yes"
            translation="sulu_admin.id"
        >
            <field-name>id</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
        </property>

        <property
            name="number"
            visibility="always"
            sortable="true"
            searchability="yes"
            translation="app.itsm.change_requests.table.number"
        >
            <field-name>number</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <filter type="text" />
        </property>

        <property
            name="title"
            visibility="always"
            sortable="true"
            searchability="yes"
            translation="sulu_admin.title"
        >
            <field-name>title</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <filter type="text" />
        </property>

        <property
            name="status"
            visibility="yes"
            sortable="true"
            searchability="yes"
            translation="app.itsm.change_requests.table.status"
        >
            <field-name>status</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <filter type="text" />
        </property>

        <property
            name="risk"
            visibility="yes"
            sortable="true"
            searchability="yes"
            translation="app.itsm.change_requests.table.risk"
        >
            <field-name>risk</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <filter type="text" />
        </property>

        <property
            name="plannedStartAt"
            visibility="no"
            sortable="true"
            searchability="never"
            translation="app.itsm.change_requests.table.planned_start_at"
        >
            <field-name>plannedStartAt</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <transformer type="datetime"/>
            <filter type="datetime" />
        </property>

        <property
            name="plannedEndAt"
            visibility="no"
            sortable="true"
            searchability="never"
            translation="app.itsm.change_requests.table.planned_end_at"
        >
            <field-name>plannedEndAt</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <transformer type="datetime"/>
            <filter type="datetime" />
        </property>

        <property
            name="updatedAt"
            visibility="yes"
            sortable="true"
            searchability="never"
            translation="sulu_admin.changed"
        >
            <field-name>updatedAt</field-name>
            <entity-name>App\IstmSor\Entity\IstmChangeRequest</entity-name>
            <transformer type="datetime"/>
            <filter type="datetime" />
        </property>

        <property
            name="realmKey"
            visibility="no"
            sortable="true"
            searchability="yes"
            translation="app.itsm.field.realm"
        >
            <field-name>realmKey</field-name>
            <entity-name>App\IstmSor\Entity\IstmRealm</entity-name>
            <joins ref="realm"/>
            <filter type="text" />
        </property>
    </properties>
</list>
